<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>StudentRegister</servlet-name>
        <servlet-class>com.test.controller.StudentRegister</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentRegister</servlet-name>
        <url-pattern>/StudentRegister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentDelete</servlet-name>
        <servlet-class>com.test.controller.StudentDelete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentDelete</servlet-name>
        <url-pattern>/StudentDelete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentTable</servlet-name>
        <servlet-class>com.test.controller.StudentTable</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentTable</servlet-name>
        <url-pattern>/StudentTable</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentSearch</servlet-name>
        <servlet-class>com.test.controller.StudentSearch</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentSearch</servlet-name>
        <url-pattern>/StudentSearch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentChangeAge</servlet-name>
        <servlet-class>com.test.controller.StudentChangeAge</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentChangeAge</servlet-name>
        <url-pattern>/StudentChangeAge</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentLogin</servlet-name>
        <servlet-class>com.test.controller.StudentLogin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentLogin</servlet-name>
        <url-pattern>/StudentLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutStudent</servlet-name>
        <servlet-class>com.test.controller.LogoutStudent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutStudent</servlet-name>
        <url-pattern>/LogoutStudent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserPage</servlet-name>
        <servlet-class>com.test.controller.UserPage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserPage</servlet-name>
        <url-pattern>/UserPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UniversityRegister</servlet-name>
        <servlet-class>com.test.controller.UniversityRegister</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UniversityRegister</servlet-name>
        <url-pattern>/UniversityRegister</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>com.test.filter.SessionFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/UserPage</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CookieFilter</filter-name>
        <filter-class>com.test.filter.CookieFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CookieFilter</filter-name>
        <url-pattern>/UserPage</url-pattern>
    </filter-mapping>

</web-app>